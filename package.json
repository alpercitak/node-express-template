{
  "name": "node-express-template",
  "description": "Node Express Template",
  "author": "Alper Çıtak <citak.alper@gmail.com>",
  "version": "0.0.4",
  "private": true,
  "license": "MIT",
  "main": "app.js",
  "repository": "https://github.com/alpercitak/node-express-template.git",
  "scripts": {
    "dev": "node --watch app.js & npx webpack --watch",
    "build": "npx webpack",
    "serve": "pnpm run build && node app.js",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "docker-compose": "docker-compose up --build --remove-orphans"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^10.0.0",
    "@prettier/plugin-pug": "^3.4.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.4.1",
    "file-loader": "^6.2.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "less-loader": "^12.3.0",
    "lint-staged": "^16.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.99.9",
    "webpack-clean-obsolete-chunks": "^0.4.0",
    "webpack-cli": "^6.0.1"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json}": [
      "pnpm format",
      "pnpm lint"
    ]
  },
  "packageManager": "pnpm@10.30.2"
}
